{% schema %}
{
  "name": "Smart Product Advisor",
  "target": "body",
  "javascript": "advisor.js",
  "stylesheet": "advisor.css",
  "settings": [
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#00a853"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get Smart Recommendations"
    }
  ]
}
{% endschema %}

<div class="smart-advisor-container" 
     data-shop-domain="{{ shop.permanent_domain }}"
     data-api-url="https://smart-product-advisor.onrender.com">
  <button 
    class="smart-advisor-button"
    style="background-color: {{ block.settings.button_color }}"
  >
    {{ block.settings.button_text }}
  </button>
  <div class="smart-advisor-modal">
    <!-- Modal content will be dynamically loaded -->
  </div>
</div> 